{
  "name": "unity-extension",
  "description": "Grounded tab chat extension for webpages and YouTube",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:stable": "wxt --browser chrome",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:e2e-ext": "cross-env WXT_E2E=1 npm run build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "test:e2e": "npm run build:e2e-ext && playwright test",
    "test:e2e:popup": "npm run build:e2e-ext && playwright test tests/e2e/unity-popup.spec.ts",
    "playwright:install": "playwright install chromium",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.564.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "youtube-transcript-plus": "^1.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@wxt-dev/module-react": "^1.1.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wxt": "^0.20.17"
  }
}
